<h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p><%="Task completed: "%><%= @task.completed %></p>
  <%= link_to 'Go back to the list' , tasks_path  %>
  <%= link_to 'Edit' , task_edit_path(@task) %>
  <%= link_to 'Delete' , task_path(@task), method: :delete, data: { confirm: 'Are you sure?'}%>
